<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>You Awesome List Of Movies to rent</h1>
    <p>The whole ctalog of movies you can ever find on the web</p>
    <p><%= link_to "Sign Up To write a Review",new_user_registration_path,class: "btn btn-primary btn-lg" %></p>
  </div>  
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%=link_to (image_tag movie.image.url(:medium), class: "image") , movie %>
      </div>
    </div>
  <% end %>
</div>